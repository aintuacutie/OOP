#include <iostream>
#include <string>

using namespace std;

struct Student {
    string admissionNumber;
    string name;
    int grades[3];
};

int main() {
    Student student;

    cout << "Enter admission number: ";
    getline(cin, student.admissionNumber);

    cout << "Enter student name: ";
    getline(cin, student.name);

    cout << "Enter grades in English, Math, Science:" << endl;
    for (int i = 0; i < 3; ++i) {
        cout << "Grade for subject " << (i + 1) << ": ";
        cin >> student.grades[i];
    }

    int sum = 0;
    for (int i = 0; i < 3; ++i) {
        sum += student.grades[i];
    }
    double average = static_cast<double>(sum) / 3.0;

    cout << "Admission number: " << student.admissionNumber << endl;
    cout << "Student name: " << student.name << endl;
    cout << "English: " << student.grades[0] << endl;
    cout << "Math: " << student.grades[1] << endl;
    cout << "Science: " << student.grades[2] << endl;
    cout << "Average: " << average << endl;

    cout << "Press any key to continue." << endl;
    cin.ignore();
    cin.get();

    return 0;
}
