#include <iostream>
#include <string>

using namespace std;

const int MAX_STUDENTS = 5;
const int NUM_SUBJECTS = 3;

struct Student {
    string admissionNumber;
    string name;
    int grades[NUM_SUBJECTS];
    double average;
};

void calculateAverage(Student& student) {
    int sum = 0;
    for (int i = 0; i < NUM_SUBJECTS; ++i) {
        sum += student.grades[i];
    }
    student.average = static_cast<double>(sum) / NUM_SUBJECTS;
}

int main() {
    Student students[MAX_STUDENTS];

    for (int i = 0; i < MAX_STUDENTS; ++i) {
        cout << "Enter admission number for student " << (i + 1) << ": ";
        getline(cin, students[i].admissionNumber);

        cout << "Enter name for student " << (i + 1) << ": ";
        getline(cin, students[i].name);

        cout << "Enter grades in English, Math, Science for student " << (i + 1) << ":" << endl;
        for (int j = 0; j < NUM_SUBJECTS; ++j) {
            cout << "Grade for subject " << (j + 1) << ": ";
            cin >> students[i].grades[j];
        }
        cin.ignore();


        calculateAverage(students[i]);
    }

    
    for (int i = 0; i < MAX_STUDENTS; ++i) {
        cout << "Admission number: " << students[i].admissionNumber << endl;
        cout << "Student name: " << students[i].name << endl;
        cout << "English: " << students[i].grades[0] << endl;
        cout << "Math: " << students[i].grades[1] << endl;
        cout << "Science: " << students[i].grades[2] << endl;
        cout << "Average: " << students[i].average << endl;
        cout << endl;
    }

    return 0;
}
